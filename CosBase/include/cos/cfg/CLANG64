#
# install paths
#
PREFIX      := /usr
BINDIR      := bin
LIBDIR      := lib
INCDIR      := include
DOCDIR      := share/doc

#
# library specific
#
LIBTYPE     := static
LIBPREFIX   := lib
LIBAREXT    := .a

#
# program specific
#
BINTYPE     := static
BINEXT      := .exe

#
# tools specific
#
CC          := gcc
CPP         := $(CC) -E
DEP         := $(CC) -M
LD          := $(CC)
AR          := ar -cr
NM          := nm -P -g
STRIP       := strip -s

#
# compiler and linker specific
#
CPPFLAGS    := -std=c99 -W -Wno-unused-local-typedefs -Wall -pedantic
CCFLAGS     := -std=c99 -W -Wno-unused-local-typedefs -Wall -pedantic -O3
LDFLAGS     := -std=c99 -W -Wno-unused-local-typedefs -Wall -pedantic -O3

DEBUG_CPP   :=
DEBUG_CC    := -g
DEBUG_LD    := -g

PROFILE_CPP :=
PROFILE_CC  := -pg
PROFILE_LD  := -pg

RELEASE_CPP :=
RELEASE_CC  := 
RELEASE_LD  := 

#
# system specific
#
SYSFLAGS    := -DOSNAME=$(OSNAME) \
               -D_XOPEN_SOURCE=500 -D_REENTRANT -D_THREAD_SAFE \
               -D_FILE_OFFSET_BITS=64 -D_LARGEFILE64_SOURCE
SYSLIBS     :=

# end of makefile
